@model IEnumerable<VirtualWallet.DTO.AccountDto>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-5">
    <h3>ARS accounts</h3>
    <hr />
    <div class="row justify-content-center align-items-center">
        <table class="table table-striped table-hover border border-4">
            <thead>
                <tr>
                    <th>
                        Account number
                    </th>
                    <th>
                        Account name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
            if(item.Type == 1) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        } }
            </tbody>
        </table>
    </div>
    <br />
    <br />
    <h3>USD accounts</h3>
    <hr />

    <div class="row justify-content-center align-items-center">
        <table class="table table-striped table-hover border border-4">
            <thead>
                <tr>
                    <th>
                        Account number
                    </th>
                    <th>
                        Account name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
            if(item.Type == 2) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        } }
            </tbody>
        </table>
            <a asp-controller="Accounts" asp-action="Create">Create New Account | </a>
            <a asp-controller="Accounts" asp-action="Transfer"> Money transfer</a>
            <a asp-controller="Accounts" asp-action="AddMoney"> Add Money</a>
    </div>
</div>














